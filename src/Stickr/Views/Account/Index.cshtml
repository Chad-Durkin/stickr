@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<h2>Authentication with Identity</h2>

<hr />
@if (User.Identity.IsAuthenticated)
{

    <p>Hello @User.Identity.Name!</p>
    <h2>Welcome to Stickr, something totally different from flickr!</h2>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log Out" />

    }
    <h3>@Html.ActionLink("Add Image", "Create", "Image")</h3>
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}

@Html.ActionLink("Add Image", "Upload", "Image")